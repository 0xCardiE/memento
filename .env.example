# =================================
# HARDHAT CONFIGURATION
# =================================

# Private keys for deployment (DO NOT USE REAL KEYS IN PRODUCTION)
SEPOLIA_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
MAINNET_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# API Keys for blockchain services
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ARBISCAN_API_KEY=your_arbiscan_api_key_here
OPTIMISM_API_KEY=your_optimism_api_key_here

# Contract verification
VERIFY_CONTRACTS=true

# =================================
# NEXT.JS CONFIGURATION
# =================================

# Public variables (accessible in browser)
NEXT_PUBLIC_APP_NAME=MementoVol1
NEXT_PUBLIC_APP_DESCRIPTION=Mint your memories as unique NFTs
NEXT_PUBLIC_DEFAULT_CHAIN=sepolia

# Contract addresses for different networks
NEXT_PUBLIC_MEMENTO_CONTRACT_SEPOLIA=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_MEMENTO_CONTRACT_MAINNET=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_MEMENTO_CONTRACT_POLYGON=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_MEMENTO_CONTRACT_ARBITRUM=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_MEMENTO_CONTRACT_OPTIMISM=0x1234567890123456789012345678901234567890

# RPC URLs for frontend (public)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
NEXT_PUBLIC_OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =================================
# DEVELOPMENT CONFIGURATION
# =================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# Logging
DEBUG=false
LOG_LEVEL=info

# =================================
# OPTIONAL: DATABASE & BACKEND
# =================================

# Database (if you add backend features later)
DATABASE_URL=postgresql://username:password@localhost:5432/memento_db
REDIS_URL=redis://localhost:6379

# JWT Secret (for authentication if added later)
JWT_SECRET=your_jwt_secret_here

# File upload (if you add IPFS/file storage later)
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# =================================
# PRODUCTION OVERRIDES
# =================================

# These will be different in production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://yourdomain.com/api
